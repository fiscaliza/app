<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.project.hackathon.camara.app.InformationSuspectedActivity"
    tools:showIn="@layout/activity_information_suspected">


    <LinearLayout
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_icon"
            android:layout_margin="10dp"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/computer" />

        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:textSize="24dp"
                android:textColor="@color/text_color_default"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Nome"/>

            <TextView
                android:textColor="@color/text_color_default_subtitle"
                android:textSize="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Descricao"/>

            <TextView
                android:textSize="20dp"
                android:textColor="@color/text_color_default_subtitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Entidade"/>

        </LinearLayout>
    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:layout_margin="10dp"
        android:id="@+id/listProductSuspected"
        android:layout_width="match_parent"
        android:layout_height="300dp" />


    <TextView
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Link AVAAZ"/>


    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btn_vote"
        android:text="@string/text_btn_vote_default"
        />
    </LinearLayout>

</android.support.constraint.ConstraintLayout>