<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.project.hackathon.camara.app.InformationSuspectedActivity"
    tools:showIn="@layout/activity_information_suspected">


    <LinearLayout
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center_horizontal"
            android:gravity="center_horizontal">

            <ImageView
                android:layout_gravity="center_horizontal"
                android:id="@+id/iv_icon"
                android:layout_margin="10dp"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:src="@drawable/computer" />
            </LinearLayout>

        <LinearLayout
            android:layout_gravity="center_horizontal"
            android:gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_gravity="center_horizontal"
                android:gravity="center_horizontal"
                android:textSize="24dp"
                android:textColor="@color/text_color_default"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Compra da escola SP"/>

            <TextView
                android:gravity="center_horizontal"
                android:textSize="20dp"
                android:textColor="@color/text_color_default_subtitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="SecretÃ¡ria de Educacao"/>

            <TextView
                android:gravity="center_horizontal"
                android:textColor="@color/text_color_default_subtitle"
                android:textSize="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Compras feitas para beneficiar os alunos no segundo semestre de 2017."/>

        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_marginTop="20dp"
        android:layout_marginBottom="5dp"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/text_color_default_subtitle"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/listProductSuspected"
        android:layout_width="match_parent"
        android:layout_height="200dp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/text_color_default_subtitle"/>


    <TextView
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Link AVAAZ"/>


    <Button
        android:padding="20dp"
        android:background="@color/colorPrimary"
        android:textColor="#FFFFFF"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btn_vote"
        android:text="@string/text_btn_vote_default"
        />
    </LinearLayout>

</android.support.constraint.ConstraintLayout>